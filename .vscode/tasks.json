{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch", // Webpack 构建任务，监听文件变动并进行打包
      "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
